<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/flag"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ramadan"

            />
        <TextView
            android:id="@+id/NumberTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="১"
            android:textColor="#fff"
            android:textSize="30dp"


            />

        <TextView
            android:id="@+id/numberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="২ মে  শনিবার"
            android:textColor="#fff"
            android:textSize="20dp"


            />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sehriId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="সেহরি"
                android:textColor="#fff"
                android:textSize="22dp"
                android:layout_marginLeft="20dp"


                />
            <TextView
                android:id="@+id/firstsehritimeid"
                android:layout_below="@id/sehriId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="3:45"
                android:textColor="#fff"
                android:textSize="22dp"

                />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/iftarId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="ইফতার"
                android:textColor="#fff"
                android:textSize="22dp"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:id="@+id/firstiftartimeid"
                android:layout_below="@id/iftarId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="3:45"
                android:textColor="#fff"
                android:textSize="22dp"

                />

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>